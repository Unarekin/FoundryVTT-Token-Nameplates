<div
  class="tab {{tab.cssClass}} nameplate-dropshadow-tab"
  data-tab="dropshadow"
  data-group="primary"
>

  <div class="form-group">
    <label for="{{idPrefix}}-dropShadow">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOW.LABEL"
      }}</label>
    <input
      type="checkbox"
      name="style.dropShadow"
      id="{{idPrefix}}-dropShadow"
      {{checked nameplate.style.dropShadow}}
    />
    <p class="hint">{{localize "NAMEPLATES.CONFIG.FONT.DROPSHADOW.HINT"}}</p>
  </div>

  <div class="form-group">
    <label for="{{idPrefix}}-dropShadowColor">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOWCOLOR.LABEL"
      }}</label>
    <color-picker
      name="style.dropShadowColor"
      id="{{idPrefix}}-dropShadowColor"
      required
      value="{{nameplate.style.dropShadowColor}}"
    ></color-picker>
    <p class="hint">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOWCOLOR.HINT"
      }}</p>
  </div>

  <div class="form-group">
    <label for="{{idPrefix}}-dropShadowAlpha">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOWALPHA.LABEL"
      }}</label>
    <range-picker
      name="style.dropShadowAlpha"
      id="{{idPrefix}}-dropShadowAlpha"
      value="{{nameplate.style.dropShadowAlpha}}"
      min="0"
      max="1"
      required
    ></range-picker>
    <p class="hint">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOWALPHA.HINT"
      }}</p>
  </div>

  <div class="form-group">
    <label for="{{idPrefix}}-dropShadowDistance">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOWDISTANCE.LABEL"
      }}</label>
    <input
      type="number"
      min="0"
      step="1"
      id="{{idPrefix}}-dropShadowDistance"
      name="style.dropShadowDistance"
      required
      value="{{nameplate.style.dropShadowDistance}}"
    />
    <p class="hint">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOWDISTANCE.HINT"
      }}</p>
  </div>

  <div class="form-group">
    <label for="{{idPrefix}}-dropShadowAngle">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOWANGLE.LABEL"
      }}</label>
    <range-picker
      id="{{idPrefix}}-dropShadowAngle"
      name="style.dropShadowAngle"
      min="0"
      max="360"
      required
      value="{{nameplate.style.dropShadowAngle}}"
    ></range-picker>
    <p class="hint">{{localize
        "NAMEPLATES.CONFIG.FONT.DROPSHADOWANGLE.HINT"
      }}</p>
  </div>
</div>